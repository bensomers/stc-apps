<% title "Manage Groups" %>

<div id="user_admin">

  <% section do %>
    <h2>Groups</h2>
    <ul>
      <% for group in @groups %>
           <li>
          <div class="user"><%= group.name %>
            <div class="user_options"><%= link_to "[Edit]", { :action => 'edit_group', :id => group.id } %> | <%= link_to "[Delete]", { :action => 'destroy_group', :id => group.id }, :confirm => "Are you sure you wish to delete this group?" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <%= link_to "[Add Group]", { :action => 'edit_group' } %>

  <% end %>  
  
</div>