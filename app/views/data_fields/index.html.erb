<% title "Data Fields" %>

<table>
  <tr>
    <th>Name</th>
    <th>Display Type</th>
    <th>Values</th>
  </tr>
  <% for data_field in @data_fields %>
    <tr>
      <td><%=h data_field.name %></td>
      <td><%=h data_field.display_type %></td>
      <td><%=h data_field.values %></td>
      <td><%= link_to "Show", data_type_data_field %></td>
      <td><%= link_to "Edit", edit_data_field_path(data_field) %></td>
      <td><%= link_to "Destroy", data_type_data_field, :confirm => "Are you
                                                        sure?", 
                                                        :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Data Field", new_data_type_data_field_path %></p>
