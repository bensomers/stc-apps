<div id="preferences" style="float:right">
  <span id="pref_link" class="dotted_link" style="display:none">Show/Hide Groups</span>
  <div id="checkbox_div">
    <% form_tag({:action => "view_preferences"}, {:id => 'pref_form'} ) do %>  
      <% if @loc_groups_all.size > 1 %>
        <% @loc_groups_all.each do |lg| %>
          <%= check_box_tag "show_groups[]", lg.id, !@user.preference.hide_group?(lg) %><%= lg.short_name %><br />
        <% end %>
      <% end %>
      
      <%= check_box_tag 'show_bars', 'all', @user.preference.show_bars? %>Sign up bars<br />
      <%= hidden_field_tag :date, params[:date] %>      
      <%= submit_tag "Show", :id => 'submit_pref' %><br />
      <span id="cancel_pref_link" class="dotted_link" style="display:none">Cancel</span><br /><br />

    <% end %>
  </div>
  <script type="text/javascript" charset="utf-8">
    document.observe('dom:loaded',function(){ $('checkbox_div').hide(); });
    document.observe('dom:loaded',function(){ $('pref_link').show(); });
  </script>
</div>
