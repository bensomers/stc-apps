/* BLUE, BOXED-IN NOTE */
div.note {
  border: 1px solid #AAAAAA;
  border-style: dashed;
  margin: 5px;
  padding: 2px;
  overflow-x: auto;
  color: #556677;
}

fieldset#warning {
  background: #C0C0C0;
}

fieldset {
  background: #ddf;
}

legend {
  color: #eef;
  background: #123456;
  font-family: sans-serif;
  padding: 0.2em 1em;
}

label.short_label{
  width: 6em;
  float: left;
  text-align: right;
  margin-right: 0.5em;
  display: block;
}

span.dotted_link, a.dotted_link {
  cursor: pointer;
  border-bottom: 1px dotted;
}

/* The error box */

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

#errorExplanation {
/*  width: 400px;*/
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  margin: -7px;
  background-color: #c00;
  color: #fff;
}

#errorExplanation p {
}

#errorExplanation ul li {
  margin-left: 10px;
}
